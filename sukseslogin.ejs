<link rel="stylesheet" type="text/css" href="https://bootswatch.com/4/journal/bootstrap.min.css">
</style>
<body>
    <div id="login">
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12 mt-5">
                        <form id="login-form" class="form" action="" method="post">
                            <h3 class="text-center text-info">BERHASIL LOGIN</h3>
                            <% if(locals.message){ %>
                            <div class="alert alert-success" role="alert">
                                <strong>Well done!</strong> <%=message.success%>
                            </div>
                            <% } %>                            
                        </form>
                        <center>
                          <a href="http://localhost:1234/logout" class="btn btn-danger btn-md">Logout</a>
                        </center>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
